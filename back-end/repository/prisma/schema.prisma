generator client {
    provider    = "prisma-client-js"
}

datasource db {
    provider    = "postgresql"
    url         = env("DATABASE_URL")
}

model User {
    id          Int         @id @default(autoincrement())
    username    String      @unique
    password    String
    name        String
    surname     String
    email       String      @unique
    permission  String      @default("GUEST")
    createdAt   DateTime    @default(now())
    submissions Submission[]
}

model Submission {
    id          Int         @id @default(autoincrement())
    title       String
    content     String
    type        String
    createdAt   DateTime    @default(now())
    solvedAt    DateTime?
    user        User        @relation(fields: [userId], references: [id])
    userId      Int
}

model Racecar {
    id          Int         @id @default(autoincrement())
    name        String
    type        String
    brand       String
    hp          Int
    participation Participant[]
}

model Driver {
    id          Int         @id @default(autoincrement())
    name        String
    surname     String
    birthdate   DateTime
    team        String
    country     String
    description String
    participation Participant[]
}

model Participant {
    id          Int         @id @default(autoincrement())
    racecar     Racecar     @relation(fields: [racecarId], references: [id])
    racecarId   Int
    driver      Driver      @relation(fields: [driverId], references: [id])
    driverId    Int         
    crashes     Crash[]
}

model Crash {
    id              Int             @id @default(autoincrement())
    type            String
    description     String
    casualties      Int
    deaths          Int
    participants    Participant[]
    race            Race    @relation(fields: [raceId], references: [id])
    raceId          Int
}

model Race {
    id          Int         @id @default(autoincrement())
    name        String
    type        String
    description String
    location    String
    date        DateTime
    crashes     Crash[]
}